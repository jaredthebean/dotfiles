"Basic configuration
syntax on
"Background must be before plugging in solarized theme or we get a flash
set background=dark
set softtabstop=2
set tabstop=2
set shiftwidth=2
set expandtab
set number
let mapleader="\<Space>"

"Plugins - uses [vim-plug](https://github.com/junegunn/vim-plug)
call plug#begin()
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'
Plug 'ludovicchabant/vim-gutentags'
Plug 'skywind3000/gutentags_plus'
Plug 'preservim/tagbar'
Plug 'altercation/vim-colors-solarized'
Plug 'neoclide/coc.nvim', {'branch': 'release'}
Plug 'vim-airline/vim-airline'
Plug 'preservim/nerdtree'
Plug 'tpope/vim-fugitive'
Plug 'fatih/vim-go', { 'do': ':GoUpdateBinaries' }
call plug#end()

"Plugin dependent configuration

"FZF
nnoremap <leader>f :GFiles<CR>
nnoremap <leader>t :Tags<CR>

"Colorscheme (
colorscheme solarized

"Gutentag
source ~/.vim/rcs/gutentag.rc

"Tagbar
autocmd VimEnter * nested :call tagbar#autoopen(1)
autocmd TabNew * nested :call tagbar#autoopen(1)

"COC
source ~/.vim/rcs/coc.rc

"NERDTree
nnoremap <leader>n :NERDTreeFocus<CR>
nnoremap <C-n> :NERDTreeToggle<CR>
